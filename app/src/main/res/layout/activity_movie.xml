<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MovieActivity"
    android:background="#f9f9f9"
    android:orientation="vertical">
   <LinearLayout
       android:id="@+id/header_bar"
       android:layout_alignParentTop="true"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:paddingHorizontal="10dp"
       android:paddingBottom="20dp"
       android:paddingTop="40dp"
       android:background="#fff">
      <ImageView
          android:id="@+id/backToHome"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/ic_back_black"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="40dp"
          android:layout_gravity="center"
          android:gravity="center"
          android:text="课程详情"
          android:textColor="@color/black"
          android:textSize="18sp"
          android:textFontWeight="600"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="80dp"
       android:layout_marginBottom="50dp"
       >
      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/video1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/header_bar"/>
            <LinearLayout
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/video1">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="学员评论"
                   android:textSize="18sp"
                   android:textFontWeight="600"
                   android:background="#fff"
                   android:textColor="@color/black"
                   android:paddingVertical="15dp"
                   android:paddingHorizontal="15dp"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/recyclerView" />
            </LinearLayout>
         </LinearLayout>

      </ScrollView>
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:orientation="horizontal"
       android:layout_alignParentBottom="true"
       android:background="#fff"
       android:padding="10dp">
      <LinearLayout
          android:layout_width="40dp"
          android:layout_height="40dp"
         android:orientation="vertical">
         <com.xuexiang.xui.widget.button.shinebutton.ShineButton
             android:id="@+id/favorite"
             android:layout_marginRight="20dp"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_gravity="center"
             android:layout_marginLeft="20dp"
             app:sb_checked_color="#ffd044"
             app:sb_icon_image="@drawable/ic_favorite"
             app:sb_normal_color="@color/deep_grey"/>
         <TextView
             android:layout_width="40dp"
             android:layout_height="15dp"
             android:text="收藏"
             android:gravity="center"
             android:textFontWeight="600"
             android:textSize="10sp"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:orientation="vertical">
         <com.xuexiang.xui.widget.button.shinebutton.ShineButton
             android:id="@+id/good"
             android:layout_marginRight="20dp"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_gravity="center"
             android:layout_marginLeft="20dp"
             app:sb_checked_color="#cc3e44"
             app:sb_icon_image="@drawable/ic_good"
             app:sb_normal_color="@color/deep_grey"/>
         <TextView
             android:layout_width="40dp"
             android:layout_height="15dp"
             android:text="点赞"
             android:gravity="center"
             android:textFontWeight="600"
             android:textSize="10sp"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:orientation="vertical">
         <com.xuexiang.xui.widget.button.shinebutton.ShineButton
             android:id="@+id/bad"
             android:layout_marginRight="20dp"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_gravity="center"
             android:layout_marginLeft="20dp"
             app:sb_checked_color="#cc3e44"
             app:sb_icon_image="@drawable/ic_bad"
             app:sb_normal_color="@color/deep_grey"/>
         <TextView
             android:layout_width="40dp"
             android:layout_height="15dp"
             android:text="不喜欢"
             android:gravity="center"
             android:textFontWeight="600"
             android:textSize="10sp"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:orientation="vertical">
         <ImageView
             android:layout_marginRight="20dp"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_marginLeft="7dp"
             android:background="@drawable/ic_download_video"/>
         <TextView
             android:layout_width="40dp"
             android:layout_height="15dp"
             android:text="缓存"
             android:gravity="center"
             android:textFontWeight="600"
             android:textSize="10sp"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:orientation="vertical">
         <ImageView
             android:id="@+id/comment_iv"
             android:layout_marginRight="20dp"
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_marginLeft="7dp"
             android:background="@drawable/ic_comment"/>
         <TextView
             android:layout_width="40dp"
             android:layout_height="15dp"
             android:text="评价"
             android:gravity="center"
             android:textFontWeight="600"
             android:textSize="10sp"/>
      </LinearLayout>
      <Button
          android:layout_width="120dp"
          android:layout_height="37dp"
          android:text="稍后在看"
          android:textColor="@color/menu_white_normal"
          android:textSize="12sp"
          android:textFontWeight="600"
          android:layout_marginLeft="20dp"
          android:background="@drawable/save_btn"/>
   </LinearLayout>
</RelativeLayout>