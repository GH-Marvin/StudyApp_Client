<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f9f9f9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/login_area"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:paddingTop="55dp"
        android:paddingLeft="25dp"
        android:background="#fff">
        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/head_iv"
            android:layout_width="70dp"
            android:layout_marginLeft="6dp"
            android:layout_height="wrap_content"
            android:src="@drawable/head"
            android:clickable="true"
            app:riv_border_color="@color/xui_config_color_gray_6"
            app:riv_border_width="1px"
            app:riv_is_circle="true"
            app:riv_selected_mask_color="@color/xui_config_color_gray_8" />

        <TextView
            android:id="@+id/nickname_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="未登录"
            android:textSize="25sp"
            android:textFontWeight="600"
            android:textColor="@color/black"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="17dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/msg_area"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/msg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="73dp"
            android:background="@drawable/ic_msg"
            android:onClick="click"/>
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:paddingTop="20dp">
        <LinearLayout
            android:id="@+id/answer_record"
            android:layout_marginHorizontal="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="click">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_form"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="答题管理"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/download"
            android:layout_marginHorizontal="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="click">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:background="@drawable/ic_download"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="下载管理"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/favorite"
            android:layout_marginHorizontal="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:onClick="click">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_heart"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="收藏"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
    android:id="@+id/balance"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#fff"
    android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="我的积分"
            android:textFontWeight="600"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="35dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_point"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/point_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textCursorDrawable="@drawable/cursor"
            android:text="10000.00"
            android:layout_marginRight="5dp"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/xui_transparent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp">
        <Button
            android:id="@+id/nickName_btn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_next" />
    </LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:id="@+id/goods_shop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="积分商城"
                android:textFontWeight="600"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="35dp">
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp">
            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_next" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:id="@+id/discount_coupon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="优惠券"
                android:textFontWeight="600"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/cursor"
                android:text=""
                android:textSize="14sp"
                android:gravity="center"
                android:textFontWeight="600"
                android:background="@color/xui_transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp">
            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_next" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:id="@+id/free"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="免流量特权"
                android:textFontWeight="600"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/cursor"
                android:text=""
                android:textSize="14sp"
                android:gravity="center"
                android:textFontWeight="600"
                android:background="@color/xui_transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp">
            <Button
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_next" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/list5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:id="@+id/option"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textFontWeight="600"
                android:textColor="@color/normal_blue"
                android:layout_gravity="center"
                android:text="退出登录"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>