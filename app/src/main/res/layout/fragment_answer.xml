<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AnswerFragment"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:background="#fff">
    <EditText
        android:inputType="text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:drawableLeft="@drawable/ic_header_search"
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:maxLines="1"
        android:background="@drawable/search"
        android:hint=" 搜索题目"
        android:textFontWeight="600"
        android:textColorHint="@color/normal_grey"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textCursorDrawable="@drawable/cursor"
        android:maxLength="16"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/pass_tv"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="0"
                        android:textSize="25sp"
                        android:textColor="@color/normal_green"
                        android:textFontWeight="600"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="20dp"
                        android:text="已通过"
                        android:textSize="12sp"
                        android:textColor="#c8c8c8"
                        android:paddingLeft="35dp"
                        android:drawableLeft="@drawable/ic_check_circle"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/fail_tv"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="0"
                        android:textSize="25sp"
                        android:textColor="@color/normal_red"
                        android:textFontWeight="600"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="20dp"
                        android:text="未通过"
                        android:textSize="12sp"
                        android:textColor="#c8c8c8"
                        android:paddingLeft="35dp"
                        android:drawableLeft="@drawable/ic_close_circle"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/notry_tv"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="0"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="20dp"
                        android:text="已尝试"
                        android:textSize="12sp"
                        android:textColor="#c8c8c8"
                        android:paddingLeft="35dp"
                        android:drawableLeft="@drawable/ic_minus_circle"
                        />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:paddingLeft="20dp"
                        android:text="最近查看"
                        android:textFontWeight="600"
                        android:textColor="@color/black"
                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="325dp"
                        android:background="@drawable/ic_next" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/cur_test_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingLeft="20dp"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:background="#fff">
                <ImageView
                    android:layout_marginBottom="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_minus_circle" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:id="@+id/cur_title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20.有效的括号"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/cur_type_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="简单"
                        android:textColor="#0fa07b"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:paddingLeft="20dp"
                        android:text="所有题目"
                        android:textFontWeight="600"
                        android:textColor="@color/black"
                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="325dp"
                        android:background="@drawable/ic_next" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/test_list">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>
</LinearLayout>