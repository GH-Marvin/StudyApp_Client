<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_linear"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity"
    android:fitsSystemWindows="false"
    android:background="#fff">
<!--    <ImageView-->
<!--        android:id="@+id/background"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="220dp"-->
<!--        android:background="@drawable/bg_pink"-->
<!--        />-->
    <ImageView
        android:id="@+id/close"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_close"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="35dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="账号密码登录"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="25sp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/username"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/cursor"
                android:drawableLeft="@drawable/ic_username"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input"
                android:hint="手机号/邮箱"
                android:textFontWeight="400"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColorHint="@color/normal_grey"
                android:textColor="@color/black"
                android:maxLength="10"/>
        </LinearLayout>


    <EditText
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:drawableLeft="@drawable/ic_password"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:maxLines="1"
        android:background="@drawable/input"
        android:hint="输入密码"
        android:textFontWeight="400"
        android:textColorHint="@color/normal_grey"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textCursorDrawable="@drawable/cursor"
        android:maxLength="16">
    </EditText>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_pink"
        android:text="登 录"
        android:textColor="#ffffff"
        android:lineHeight="70dp"
        android:textSize="16sp">
    </Button>
        <!--     阴影   android:elevation="6dp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/forgotten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/deep_grey"
            android:textSize="14sp"
            android:paddingRight="20dp"
            android:text="忘记密码?"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"/>
        <TextView
            android:id="@+id/register"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/deep_grey"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:text="立即注册 >"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/login_by_QQ"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_qq"/>
        <ImageView
            android:id="@+id/login_by_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wechat"/>
        <ImageView
            android:id="@+id/login_by_weibo"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_weibo"/>
    </LinearLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:layout_gravity="center"
    android:layout_weight="1">

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        android:text="Copyright ©2020 liuzhao.All Right Received. "
        android:textColor="#e8e8e8"
        android:textSize="12sp" />
</RelativeLayout>
    </LinearLayout>
</LinearLayout>