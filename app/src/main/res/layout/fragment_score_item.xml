<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ScoreItemFragment"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/check_iv"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/choice_red"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="50dp"
        android:orientation="vertical"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/quest_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:paddingHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:text="单选"
                android:textFontWeight="600"
                android:textColor="@color/normal_blue"
                android:background="@drawable/single"/>
        </LinearLayout>
        <TextView
            android:id="@+id/quest_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1、求 1 + 1 =（    ）"
            android:textColor="@color/black"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/score_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(5分)"
            android:layout_marginLeft="280dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:paddingTop="20dp"
            android:id="@+id/choice_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="题目答案"
            android:paddingHorizontal="7dp"
            android:paddingVertical="3dp"
            android:textSize="14sp"
            android:textColor="@color/normal_green"
            android:background="@drawable/answer_tag"
            android:textFontWeight="600"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fff">
        <TextView
            android:id="@+id/answer_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:text="等待开发..."
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答案解析"
            android:paddingHorizontal="7dp"
            android:paddingVertical="3dp"
            android:textSize="14sp"
            android:textColor="@color/orange"
            android:background="@drawable/socre_tag"
            android:textFontWeight="600"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:text="暂无该题目的解析。"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>