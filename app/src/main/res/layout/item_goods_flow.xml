<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="175dp"
    android:layout_marginLeft="7dp"
    android:layout_marginVertical="15dp"
    android:layout_height="wrap_content"
    android:background="@drawable/goods_card"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:layout_marginTop="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/goodIcon_iv"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/goodsName_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Honor 8A"
                android:paddingHorizontal="20dp"
                android:textSize="12sp"
                android:paddingVertical="2dp"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:gravity="center"/>
            <TextView
                android:id="@+id/goodsDesc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:text="幻夜黑"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:gravity="center"/>
                <TextView
                    android:id="@+id/goodsTag_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="720P珍珠屏"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:paddingVertical="1dp"
                    android:paddingHorizontal="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/goods_tag"/>
                <TextView
                    android:id="@+id/goodsTag_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="720P珍珠屏"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:paddingVertical="1dp"
                    android:paddingHorizontal="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/goods_tag"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_point"/>
                <TextView
                    android:id="@+id/goodsPrice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:text="2800."
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:text="00"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
            </LinearLayout>

                <Button
                    android:id="@+id/buy_btn"
                    android:layout_width="120dp"
                    android:layout_height="27dp"
                    android:text="购买"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:background="@drawable/radio_btn"/>
            z
        </LinearLayout>

    </LinearLayout>
</LinearLayout>