<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OrderActivity"
    android:background="#f4f4f4">
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="40dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back_black"/>
        <TextView
            android:id="@+id/current_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:text="我的订单"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textFontWeight="600"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/header_bar"
        android:background="@drawable/pay_success"/>
    <RelativeLayout
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:background="#fff"
        android:layout_below="@+id/image">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_wuliu"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3698e1"
                    android:textSize="14sp"
                    android:text="订单已支付，等待揽收..."/>
            </LinearLayout>
            <TextView
                android:id="@+id/update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="2000-08-29 00:00:00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_next"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:background="#fff"
        android:layout_below="@+id/state">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_address"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/realName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="14sp"
                    android:text="姓名"/>
                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="13786335353"/>
            </LinearLayout>
            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="辽宁省 沈阳市 浑南区 东北大学浑南校区500号"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_next"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginTop="15dp"
        android:paddingVertical="10dp"
        android:layout_below="@id/address_layout">
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:id="@+id/goodIcon_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/goodsName_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Honor 8A"
                android:textSize="12sp"
                android:paddingVertical="2dp"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/goodsTag_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="七天无理由退换"
                    android:textSize="10sp"
                    android:textColor="#fff"
                    android:paddingVertical="2dp"
                    android:paddingHorizontal="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/goods_tag"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_point"/>
                <TextView
                    android:id="@+id/goodsPrice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:text="2800."
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:text="00"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_below="@+id/detail"
        >
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="17dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="订单编号"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp">
            <TextView
                android:id="@+id/order_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/cursor"
                android:text="12362135123712"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@color/xui_transparent"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_below="@+id/order"
        >
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="商品总价"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp">
            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/cursor"
                android:text="2000.00 积分"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@color/xui_transparent"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/car"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_below="@+id/total"
        >
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="17dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="运费"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/cursor"
                android:text="0 积分"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@color/xui_transparent"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/cheep"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_below="@+id/car"
        >
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="17dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="优惠券"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/cursor"
                android:text="- 0 积分"
                android:textColor="@color/buy_red"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@color/xui_transparent"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_below="@+id/cheep">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="17dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="实付款"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp">
            <TextView
                android:id="@+id/pay_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/cursor"
                android:text="2000"
                android:textFontWeight="600"
                android:textColor="@color/buy_red"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@color/xui_transparent"/>
            <TextView
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text=".00"
                android:textColor="#e02e24"
                android:textFontWeight="600"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="积分"
                android:textFontWeight="600"
                android:textColor="#e02e24"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#fff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <Button
                    android:id="@+id/home_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="回到首页"
                    android:textColor="#fff"
                    android:background="#e02e24"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="200dp">
                <Button
                    android:id="@+id/checkAll_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="查看全部订单"
                    android:background="#fff"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>